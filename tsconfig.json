{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "src/components/Navbar/Navigation/npm dlx shadcn@latest add navigation-menu",
    "src/app/(main)/_HomePage/Shared/customer_murque/Customer_Marqueetsx",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "additional.d.ts"
  ],
  "exclude": ["node_modules"]
}
